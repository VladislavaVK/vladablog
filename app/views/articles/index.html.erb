<h1>Articles</h1>


<ul>
  <% @articles.each do |article| %>
  <% if current_user.id == article.user_id %>
    <% unless article.draft? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
<% end %>
</ul>

<%= link_to "Новая статья", new_article_path %>
</br> <a href="/">Перейти на главную страницу</a>