<h1>Drafts</h1>
<ul>
  <% @articles.each do |article| %>
  <% if current_user.id == article.user_id %>
    <% if article.draft? %>
      <li>
        <a href="<%= article_path(article) %>/edit">
        <%= article.title %>
      </li>
    <% end %>
     <% end %>
  <% end %>
</ul>
